<script type="text/javascript">
function validateForm(e) {
   //alert($('#age :selected').text());
   //alert($("#gender:checked").length);
	if($("#gender:checked").length  == 0){
			$(".err1").css("display", "block");
			e.preventDefault();
			return false;
		}else{
			$(".err1").css("display", "none");
		}
		if($('#age :selected').text()  == 'Select a year'){
			$(".err2").css("display", "block");
			e.preventDefault();
			return false;
		}else{
			$(".err2").css("display", "none");
		}
		if($("#firstname").val()  == ''){
			//alert("sir me dard h");
			$(".err3").css("display", "block");
			e.preventDefault();
			return false;
		}else{
			$(".err3").css("display", "none");
		}
		if($("#lastname").val()  == ''){
			$(".err4").css("display", "block");
			e.preventDefault();
			return false;
		}else{
			$(".err4").css("display", "none");
		}
		if($("#email").val()  == '')  
		{
		//alert("blank g");
			$(".err5").css("display", "block");
			e.preventDefault();
			return false;
		}
		else if($("#email").val() != ''){
			//alert("full g");
			
			var reg = /^([A-Za-z0-9_\-\.])+\@([A-Za-z0-9_\-\.])+\.([A-Za-z]{2,4})$/;

			if (reg.test($("#email").val()) == false) 
			{
				alert("error hai");
				$(".err51").css("display", "block");
				e.preventDefault();
				return false;
			}
			else{
			//$(".err5").css("display", "block");
			$(".err51").css("display", "none");
			}

        //return true;
		
		}
		else{
			//$(".err5").css("display", "block");
			$(".err5").css("display", "none");
		}
		
		
		if($("#mobile_no").val()  == ''){
			$(".err6").css("display", "block");
			e.preventDefault();
			return false;
		}else if($("#mobile_no").val() != ''){
			//alert("full g");
			
			var reg = /^[0-9][0-9]*$/;

			if (reg.test($("#mobile_no").val()) == false) 
			{
				//alert("error hai");
				$(".err61").css("display", "block");
				e.preventDefault();
				return false;
			}

        //return true;
		
		}
		
		else{

			$(".err6").css("display", "none");
		}
		if($("#city").val()  == ''){
			$(".err7").css("display", "block");
			e.preventDefault();
			return false;
		}else{
			$(".err7").css("display", "none");
		}
		
		return true;
}

function validateEmail(email) {
    //var x = document.forms["myForm"]["email"].value;
    var atpos = email.indexOf("@");
    var dotpos = email.lastIndexOf(".");
    if (atpos<1 || dotpos<atpos+2 || dotpos+2>=email.length) {
        //return("Not a valid e-mail address");
        return false;
    }else{
		return true;
	}
}
</script>
		  
		
